<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="six_wheel_skid_ugv">
  <xacro:include filename="materials.xacro" />

  <link name="base_footprint"/>
  <joint name="base_footprint_to_chassis" type="fixed">
    <parent link="base_footprint"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="chassis_link">
    <visual>
      <geometry>
        <box size="1.8 1.0 0.3"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.3 0.3 0.3 1.0"/>
      </material>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="1.8 1.0 0.3"/>
      </geometry>
      <origin xyz="0 0 0.15" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="60"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
      <origin xyz="0 0 0.15"/>
    </inertial>
  </link>

  <xacro:macro name="wheel" params="prefix x y z">
    <link name="${prefix}_wheel_link">
      <visual>
        <geometry>
          <cylinder radius="0.15" length="0.1"/>
        </geometry>
        <material name="Black">
          <color rgba="0.1 0.1 0.1 1.0"/>
        </material>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.15" length="0.1"/>
        </geometry>
        <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      </collision>
      <inertial>
        <mass value="5"/>
        <inertia ixx="0.05" ixy="0" ixz="0" iyy="0.05" iyz="0" izz="0.05"/>
        <origin xyz="0 0 0"/>
      </inertial>
    </link>

    <joint name="${prefix}_wheel_joint" type="continuous">
      <parent link="chassis_link"/>
      <child link="${prefix}_wheel_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
    </joint>
  </xacro:macro>

  <xacro:wheel prefix="fl" x="0.7" y="0.45" z="0"/>
  <xacro:wheel prefix="ml" x="0.0" y="0.45" z="0"/>
  <xacro:wheel prefix="rl" x="-0.7" y="0.45" z="0"/>

  <xacro:wheel prefix="fr" x="0.7" y="-0.45" z="0"/>
  <xacro:wheel prefix="mr" x="0.0" y="-0.45" z="0"/>
  <xacro:wheel prefix="rr" x="-0.7" y="-0.45" z="0"/>
</robot>
